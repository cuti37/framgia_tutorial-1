<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.user.avatar_size),
    micropost.user %>
  <span class="user_name"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    <%= t ".posted" %> <%= time_ago_in_words micropost.created_at %><%= t ".ago" %>
    <%= link_to t(".delete"), micropost, method: :delete,
      data: {confirm: t(".sure")} %>
  </span>
</li>
