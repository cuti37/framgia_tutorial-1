<%= provide :title, t(".all_users") %>
<h1><%= t ".all_users" %></h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: Settings.user.avtar_size %>
      <%= link_to user.name, user %>
      <% if current_user.is_admin? && !current_user?(user) %>
        | <%= link_to t(".delete"), user, method: :delete,
          data: {confirm: t(".sure")} %>
      <% end %>
    </li>
  <% end %>
</ul>
